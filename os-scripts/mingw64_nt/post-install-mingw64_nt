#!/bin/sh

cd plugins-themes-WinUXTheme
make GNUSTEP_INSTALLATION_DOMAIN=SYSTEM debug=yes install

cd ../
cd apps-gorm
make GNUSTEP_INSTALLATION_DOMAIN=SYSTEM debug=yes install

cd ..
defaults write NSGlobalDomain GSTheme WinUXTheme
#!/usr/bin/env bash
set -euo pipefail
REPO_ROOT="$(cd "$(dirname "$0")/../.." && pwd)"
if [ -f "$REPO_ROOT/post-install-mingw64_nt" ]; then
  exec bash "$REPO_ROOT/post-install-mingw64_nt" "$@"
else
  echo "post-install-mingw64_nt not found in repo root" >&2
  exit 1
fi
