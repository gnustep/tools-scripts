#!/bin/sh

pwd
cd apps-gorm || exit 1
make debug=yes
sudo -E make GNUSTEP_INSTALLATION_DOMAIN=SYSTEM debug=yes install
#!/usr/bin/env bash
set -euo pipefail
REPO_ROOT="$(cd "$(dirname "$0")/../.." && pwd)"
if [ -f "$REPO_ROOT/post-install-linux" ]; then
  exec bash "$REPO_ROOT/post-install-linux" "$@"
else
  echo "post-install-linux not found in repo root" >&2
  exit 1
fi
