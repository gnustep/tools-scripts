#!/bin/sh

# Linux builds are relatively simple...
./tools-scripts/clang-build

# since the last place we were in the build was libs-back
cd ..
#!/usr/bin/env bash
set -euo pipefail
REPO_ROOT="$(cd "$(dirname "$0")/../.." && pwd)"
if [ -f "$REPO_ROOT/build-linux" ]; then
  exec bash "$REPO_ROOT/build-linux" "$@"
else
  echo "build-linux not found in repo root" >&2
  exit 1
fi
